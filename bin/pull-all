#!/usr/bin/env perl
my $all = shift;

@ARGV = "REPOSITORIES";
@ARGV = "etc/REPOSITORIES" if -e "etc/REPOSITORIES";

while (<>) {
    s/^-/*/ if $all;

    next unless my ($url) = /^\* (.*)/;
    next if $ENV{PULL_ALL_SKIP} && $url =~ $ENV{PULL_ALL_SKIP};

    print "Pulling from $url...\n";
    system("darcs pull --no-set-default $url");
}

