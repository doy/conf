#!/bin/sh


case "$1" in
    goto)
        xrandr --addmode VIRTUAL1 1920x1080
        xrandr --output VIRTUAL1 --auto --output eDP1 --auto --left-of VIRTUAL1
        i3-switch-workspace virtual
        ;;
    off)
        xrandr --output VIRTUAL1 --off
        ;;
    *)
        echo "bad subcommand $1" >&2
        exit 1
        ;;
esac
