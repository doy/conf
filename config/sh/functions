function perldoc {
    # XXX bash specific
    if type cpandoc > /dev/null 2>&1; then
        cpandoc "$@"
    else
        command perldoc "$@"
    fi
}

function cdu {
    local root
    root="$(git rev-parse --show-superproject-working-tree 2>/dev/null)"
    if [ -n "$root" ]; then
        cd "$root"
    else
        cd "$(git rev-parse --show-toplevel)"
    fi
}

