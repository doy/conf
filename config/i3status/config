general {
    output_format = i3bar
    interval = 1
}

order += "cpu_usage"
order += "wireless wlp0s20f3"
order += "battery 0"
order += "time"
order += "load"

cpu_usage {
    format = "CPU: %usage"
}

wireless wlp0s20f3 {
    format_up = "wlp0s20f3: (%essid: %quality)"
    format_down = "wlp0s20f3"
}

battery 0 {
    last_full_capacity = true
    format = "%status %percentage (%remaining %consumption)"
}

time {
    format = "%a %b %d %H:%M:%S"
}

load {
    format = "%1min"
}
