class "GtkSpin*" style "spin"

style "default"
{
  font = "-*-helvetica-medium-r-normal--*-120-*-*-*-*-*-*"
  fg[NORMAL]      = "#000000" 
  fg[PRELIGHT]    = "#000000" 
  fg[ACTIVE]      = "#000000" 
  fg[SELECTED]    = "#000000" 
  fg[INSENSITIVE] = "#999999" 
  bg[NORMAL]      = "#cccccc" 
  bg[PRELIGHT]    = "#cccccc"
  bg[ACTIVE]      = "#cccccc"
  bg[SELECTED]    = "#84a8cc"
  bg[INSENSITIVE] = "#cccccc"
  base[NORMAL]    = "#ffffff"
  base[SELECTED]  = "#84a8cc"
  base[ACTIVE]    = "#84a8cc"
  GtkRange::slider_width = 15
  GtkScrollbar::min_slider_length = 15
  engine "pixmap" 
  {
    image 
      {
        function        = FOCUS
	recolorable     = TRUE
